{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "hosting": [
    {
      "site": "cksc-law",
      "rewrites": [
        {
          "source": "/",
          "run": {
            "serviceId": "cksc-legislation",
            "region": "asia-east1"
          }
        },
        {
          "source": "/legislation",
          "run": {
            "serviceId": "cksc-legislation",
            "region": "asia-east1"
          }
        },
        {
          "source": "/legislation/**",
          "run": {
            "serviceId": "cksc-legislation",
            "region": "asia-east1"
          }
        },
        {
          "source": "/document",
          "run": {
            "serviceId": "cksc-legislation",
            "region": "asia-east1"
          }
        },
        {
          "source": "/document/**",
          "run": {
            "serviceId": "cksc-legislation",
            "region": "asia-east1"
          }
        },
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "public": "dist/spa",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "site": "cksc-legislation",
      "redirects": [
        {
          "source": "/",
          "destination": "https://law.cksc.tw/",
          "type": 301
        },
        {
          "source": "/:path*",
          "destination": "https://law.cksc.tw/:path",
          "type": 301
        }
      ]
    }
  ],
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ]
}
